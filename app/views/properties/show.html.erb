<div class="row">
  <div>
    <div class="card">
      <div class="card-header text-center pt-3"><h5><%= @property.name %></h5></div>
        <div class="card-body">
          価格：<%= @property.price.to_s(:delimited) %>万円<br>
          住所：<%= @property.address %><br>
          担当不動産会社：<%= @property.company %><br>
          <div class="mt-2">
            <%= link_to "削除", @property, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-sm' %>
            <%= link_to "編集", edit_property_path, class: 'btn btn-success btn-sm' %>
          </div>
        </div>
      </div>
    </div>
    　<div class="pt-3"><h5>活動ログ</h5></div>
      <div class="pt-2">
        <%= form_with(model: @log) do |f| %>
          <%= hidden_field_tag :property_id, @property.id %>
          <%= f.text_area :content, class: 'form-control', rows: 5 %>
            <div class="pt-2 d-flex justify-content-center" >
              <%= f.submit '投稿', class: 'btn btn-primary w-50' %>
            </div>
        <% end %>
      </div>
    <div class="pt-5"><h5>活動ログ一覧</h5></div>
    <div class="pt-2">
      <% if @logs.any? %>
        <% @logs.each do |log| %>
          <div>
            <span class="text-muted">posted at <%= log.created_at %></span>
          </div>
          <div>
            <p><%= log.content %></p>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>